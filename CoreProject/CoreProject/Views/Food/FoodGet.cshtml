@model CoreProject.Models.Food
@{
    ViewData["Title"] = "FoodGet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Get Food Page</h2>
@using (Html.BeginForm("FoodUpdate", "Food", FormMethod.Post))
{


    @Html.Label("Food ID")
    @Html.TextBoxFor(x => x.FoodID, new { @class = "form-control" })

    @Html.Label("Food Name")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })

    @Html.Label("Stock")
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })

    @Html.Label("Price")
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })

    @Html.Label("Image URL")
    @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control" })

    @Html.Label("Category")
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })

    @Html.Label("Description")
    @Html.DropDownListFor(x => x.CategoryID,(List<SelectListItem>)ViewBag.v1,new {@class="form-control"})

    <button class="btn btn-info">Save</button>


}

